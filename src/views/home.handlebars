<h1 class="' d-flex justify-content-center display-5 mt-2 mb-4">Products List</h1>
<div class="d-flex justify-content-center">
  {{#each products}}
    <div class="card m-1" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title display-6">{{this.title}}</h5>
        <p class="card-text text-muted">{{this.description}}</p>
        <p class="card-text">{{this.price}}</p>
        <p class="card-text text-secondary">product ID: {{this.id}}</p>
      </div>
    </div>
  {{/each}}
</div>
